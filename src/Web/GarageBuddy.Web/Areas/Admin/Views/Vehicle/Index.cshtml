@model ICollection<VehicleListViewModel>

@{
    ViewData["Title"] = "Vehicle Information";
}

<section class="section">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h5 class="card-title">@ViewData["Title"]</h5>
            <a class="btn btn-success" asp-area="Admin" asp-controller="Vehicle" asp-action="Create">Create New Vehicle</a>
        </div>
        <div class="card-body">
            <table id="vehicleTable" class="table table-striped table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Customer Name</th>
                        <th>VIN</th>
                        <th>Registration Number</th>
                        <th>Manufacture Date</th>
                        @* <th>Engine HP</th> *@
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehicle in Model)
                    {
                        <tr>
                            <td>@vehicle.BrandName</td>
                            <td>@vehicle.ModelName</td>
                            <td>@vehicle.CustomerName</td>
                            <td>@vehicle.VehicleIdentificationNumber</td>
                            <td>@vehicle.RegistrationNumber</td>
                            <td>@vehicle.DateOfManufacture</td>
                            @* <td>@vehicle.EngineHorsePower</td> *@
                            <td>@vehicle.Description</td>

                            <td>
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@vehicle.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_DataTablesScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#vehicleTable').DataTable();
        });
    </script>
}
