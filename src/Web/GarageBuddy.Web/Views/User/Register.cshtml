@model RegisterFormModel

@{
    Layout = "_LayoutLoginRegister";
    ViewData["Title"] = "Register";
}

<div id="auth">
    <div class="row h-100">
        <div class="col-lg-5 col-12">
            <div id="auth-left">
                <div class="auth-logo row">
                    <div class="col-md-8">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/themes/mazer/dist/assets/compiled/svg/logo.svg" alt="Logo" />
                        </a>
                    </div>
                    <div class="col-md-4">
                        <partial name="_ThemeTogglePartial" />
                    </div>
                </div>
                <h1 class="auth-title">@ViewData["Title"]</h1>
                <p class="auth-subtitle mb-5">
                    Input your data to register to our website.
                </p>

                <form asp-controller="User" asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        <input type="text" class="form-control form-control-xl" asp-for="@Model.Email"
                               placeholder="e-mail" autocomplete="email" aria-required="true" />
                        <div class="form-control-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <span class="form-text text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        <input type="password" class="form-control form-control-xl" asp-for="@Model.Password"
                               placeholder="Password" autocomplete="new-password" aria-required="true" />
                        <div class="form-control-icon">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                        <span class="form-text text-danger" asp-validation-for="@Model.Password"></span>
                    </div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        <input type="password" class="form-control form-control-xl" asp-for="@Model.ConfirmPassword"
                               placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                        <div class="form-control-icon">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                        <span class="form-text text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                    </div>
                    <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Register</button>
                </form>

                <div class="text-center mt-5 text-lg fs-4">
                    <p class="text-gray-600">
                        Already have an account?
                        <a asp-controller="User" asp-action="Login" class="font-bold">Log in</a>.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-7 d-none d-lg-block">
            <div id="auth-right"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}