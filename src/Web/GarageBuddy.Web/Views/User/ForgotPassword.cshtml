@model ForgotPasswordFormModel

@{
    Layout = null;
    ViewData["Title"] = "Reset password";
}

<div class="row">
    <div class="col-md-12">
        @* asp-route-id="@Model.TransactionId" *@
        <form asp-controller="User" asp-action="ForgotPassword" onsubmit="return jQueryAjaxPost(this);">
            <div class="form-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <div class="form-group position-relative has-icon-left mb-4 mt-1">
                        <input type="text" class="form-control form-control" asp-for="@Model.Email"
                               placeholder="e-mail" autocomplete="email" aria-required="true" />
                        <div class="form-control-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <span class="form-text text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                    @* <input type="hidden" asp-for="TransactionId" /> *@
                </div>
                <div class="form-group">
                    <div class="col-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
<partial name="_NotificationsPartial" />